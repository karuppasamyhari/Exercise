                   * * * * *
                 * * * * *
               * * * * *
             * * * * *
           * * * * *
        
        int n = 5;
        for(int i = n; i >= 1; i -= 1){
            for(int j = i; j >= 1; j -= 1)
                System.out.print("  ");
            for(int k = 1; k <= n; k += 1)
                System.out.print(" *");
            System.out.println();
        }
