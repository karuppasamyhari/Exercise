        * * * * *
        * * * *
        * * *
        * *
        *
        *
        * *
        * * *
        * * * *
        * * * * *

        int n = 5;
        for(int i = n; i >= 1; i -= 1){
            for(int j = i ; j >= 1; j -= 1)
                System.out.print("* ");
            System.out.println();
        }
        for(int i = 1; i <= n; i += 1){
            for(int j = 1 ; j <= i; j += 1)
                System.out.print("* ");
            System.out.println();
        }
